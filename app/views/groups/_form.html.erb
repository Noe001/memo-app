<%= form_with model: @group, local: true do |f| %>
  <div class="field">
    <%= f.label :name, "グループ名", class: "form-label" %>
    <%= f.text_field :name, class: "form-input", autofocus: true, required: true %>
  </div>

  <div class="field">
    <%= f.label :description, "説明", class: "form-label" %>
    <%= f.text_area :description, rows: 3, class: "form-textarea" %>
  </div>

  <div class="actions">
    <%= f.submit (@group.new_record? ? "作成" : "更新"), class: "btn btn-primary" %>
    <% if @group.persisted? %>
      <%= link_to "キャンセル", group_path(@group), class: "btn btn-outline" %>
    <% else %>
      <%= link_to "キャンセル", groups_path, class: "btn btn-outline" %>
    <% end %>
  </div>
<% end %> 
