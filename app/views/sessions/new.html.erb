<div class="auth-card animate-fade-in">
  <div class="auth-header">
    <h1 class="auth-title">ログイン</h1>
    <p class="auth-subtitle">メモ管理を始めるためにログインしてください</p>
  </div>
  
  <%= form_with url: create_sessions_path, 
                local: true, 
                method: :post, 
                class: "auth-form",
                data: { turbo: false } do |f| %>
    
    <div class="form-group">
      <%= f.label :email, "メールアドレス", class: "form-label" %>
      <%= f.email_field :email, 
                        class: "form-input", 
                        placeholder: "your@email.com",
                        required: true %>
    </div>

    <div class="form-group">
      <%= f.label :password, "パスワード", class: "form-label" %>
      <%= f.password_field :password, 
                           class: "form-input", 
                           placeholder: "パスワードを入力",
                           required: true %>
    </div>

    <%= f.submit "ログイン", class: "btn btn-primary auth-submit" %>
  <% end %>
  
  <div class="auth-footer">
    <%= link_to "アカウントを作成する", signup_path, class: "auth-link" %>
  </div>
</div>
