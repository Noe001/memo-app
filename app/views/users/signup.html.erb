<% content_for :title, "アカウント作成" %>
<% content_for :description, "MemoAppのアカウントを作成して、効率的なメモ管理を始めましょう。" %>

<%= javascript_import_module_tag "users_signup" %>

<div class="auth-card animate-fade-in">
  <div class="auth-header">
    <h1 class="auth-title">アカウント作成</h1>
    <p class="auth-subtitle">新しいアカウントを作成してメモ管理を始めましょう</p>
  </div>
  
  <%= form_with model: @user, 
                url: signup_path, 
                class: "auth-form",
                data: { turbo: false }, 
                local: true do |f| %>
    
    <div class="form-group">
      <%= f.label :name, "名前", class: "form-label" %>
      <%= f.text_field :name, 
                       class: "form-input", 
                       placeholder: "あなたの名前",
                       required: true %>
    </div>

    <div class="form-group">
      <%= f.label :email, "メールアドレス", class: "form-label" %>
      <%= f.email_field :email, 
                        class: "form-input", 
                        placeholder: "your@email.com",
                        required: true %>
    </div>

    <div class="form-group">
      <%= f.label :password, "パスワード", class: "form-label" %>
      <%= f.password_field :password, 
                           class: "form-input", 
                           placeholder: "8文字以上のパスワード",
                           required: true %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, "パスワード確認", class: "form-label" %>
      <%= f.password_field :password_confirmation, 
                           class: "form-input", 
                           placeholder: "パスワードを再入力",
                           required: true %>
    </div>

    <%= f.submit "アカウント作成", class: "btn btn-primary auth-submit" %>
    <% end %>
  
  <div class="auth-footer">
    <%= link_to "既にアカウントをお持ちですか？ログイン", new_sessions_path, class: "auth-link" %>
  </div>
</div>
